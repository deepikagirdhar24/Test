public void verifyTopLevelAWSFields(Response response, Map<String, String> expectedFields) throws Exception {
    for (Map.Entry<String, String> entry : expectedFields.entrySet()) {
        String field = entry.getKey();
        String expectedValue = entry.getValue();

        String actualValue = jsonHelper.extractStringField(response, field);

        ExtentCucumberAdapter.addTestStepLog(
            "Field: " + field + " | Actual: " + actualValue + " | Expected: " + expectedValue
        );

        String expected = StringUtils.strip(expectedValue, "*").trim();

        boolean matches = expectedValue.startsWith("*") && expectedValue.endsWith("*") ? actualValue.contains(expected)
                : expectedValue.startsWith("*") ? actualValue.endsWith(expected)
                : expectedValue.endsWith("*") ? actualValue.startsWith(expected)
                : actualValue.equals(expected);

        Assert.assertTrue(
            matches,
            "Expected pattern mismatch for field [" + field + "]. Actual: " + actualValue + ", Expected: " + expectedValue
        );
    }
}
