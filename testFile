public static POJOAddressRequest buildAddressPayload(Map<String, String> mapAddressDetails, boolean includeUuid) {
    POJOAddressRequest address = new POJOAddressRequest();

    if (includeUuid) {
        address.setStrUuid(UUID.randomUUID().toString().substring(0, 7));
    }

    address.setStrSalutation(PayloadHelper.resolveDynamicText(mapAddressDetails.get("salutation")));
    address.setStrSalutationLetter(PayloadHelper.resolveDynamicText(mapAddressDetails.get("salutationLetter")));
    address.setStrAttnOf(PayloadHelper.resolveDynamicText(mapAddressDetails.get("attnOf")));
    address.setStrCrof(PayloadHelper.resolveDynamicText(mapAddressDetails.get("crof")));
    address.setStrResidency(PayloadHelper.resolveDynamicText(mapAddressDetails.get("residency")));
    address.setStrStreetNr(PayloadHelper.resolveDynamicText(mapAddressDetails.get("streetNr")));

    // Custom fixed prefix for street
    String streetSuffix = PayloadHelper.resolveDynamicText(mapAddressDetails.get("street"));
    address.setStrStreet("teststreet" + streetSuffix);

    address.setStrStreetAdd(PayloadHelper.resolveDynamicText(mapAddressDetails.get("streetAdd")));
    address.setStrPoBox(PayloadHelper.resolveDynamicText(mapAddressDetails.get("poBox")));
    address.setStrCity(PayloadHelper.resolveDynamicText(mapAddressDetails.get("city")));
    address.setStrState(PayloadHelper.resolveDynamicText(mapAddressDetails.get("state")));
    address.setStrZip(PayloadHelper.resolveDynamicText(mapAddressDetails.get("zip")));
    address.setStrCountry(PayloadHelper.resolveDynamicText(mapAddressDetails.get("country")));

    return address;
}
