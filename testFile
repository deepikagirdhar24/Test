public POJOChqBookProfileRequest buildChqBookProfilePayload(Map<String, String> mapChqBookDetails) {
    POJOChqBookProfileRequest chqBookProfile = new POJOChqBookProfileRequest();

    chqBookProfile.setUuid(UUID.randomUUID().toString().substring(0, 7));
    chqBookProfile.setType(payloadHelper.normalize(mapChqBookDetails.get("type")));
    chqBookProfile.setNarrativeType(payloadHelper.normalize(mapChqBookDetails.get("narrativeType")));
    chqBookProfile.setOwnerId(payloadHelper.normalize(mapChqBookDetails.get("ownerId")));
    chqBookProfile.setMaccId(payloadHelper.normalize(mapChqBookDetails.get("maccId")));
    chqBookProfile.setAddressId(payloadHelper.normalize(mapChqBookDetails.get("addressId")));
    chqBookProfile.setEmbossingName(payloadHelper.normalize(mapChqBookDetails.get("embossingName")));
    chqBookProfile.setMailingOption(payloadHelper.normalize(mapChqBookDetails.get("mailingOption")));

    return chqBookProfile;
}
