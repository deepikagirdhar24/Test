public void applyBigDecimalField(String rawValue, String fieldName, POJOMoneyAccountSimple account) {
    String normalized = normalize(rawValue);
    if (normalized != null && !normalized.isEmpty()) {
        try {
            BigDecimal parsed = new BigDecimal(normalized);
            switch (fieldName) {
                case "dailyLimit":
                    account.setBdDailyLimit(parsed);
                    break;
                default:
                    System.err.println("Unknown field: " + fieldName);
            }
        } catch (NumberFormatException e) {
            System.err.println("Invalid numeric value for " + fieldName + ": " + normalized);
        }
    }
}
