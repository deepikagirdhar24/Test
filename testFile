public Response sendPatchRequest(String url, String bearerToken, String jwtToken, String body, Map<String, ?> queryParams, Map<String, ?> pathParams)

RequestSpecification request = buildRequestSpec(bearerToken, jwtToken);

if (queryParams != null) {
    request.queryParams(queryParams);
}
if (pathParams != null) {
    request.pathParams(pathParams);
}

logRequestDetails("PATCH", url, body, queryParams);
Response response = request.body(body).patch(url);
logResponseDetails(response);
return response;
