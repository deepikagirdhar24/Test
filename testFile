public Response getProspect(String strEnvType, String strBearerToken, String strJWTToken, Map<String, String> mapGetProspectDetails) {

    // Extract path and query parameters
    String prospectId = mapGetProspectDetails.get("prospectId");
    String type = mapGetProspectDetails.get("type");

    // Build full URL with path and query param
    String baseUrl = getTYKURL(strEnvType, "TYK.GETPROSPECT"); // e.g., https://api.domain.com
    String endpoint = "/ava/acpr/sas-prospect/v1/prospects/" + prospectId;
    String fullUrl = baseUrl + endpoint;

    // Prepare query params
    Map<String, Object> queryParams = new HashMap<>();
    if (type != null) {
        queryParams.put("type", type);
    }

    ExtentCucumberAdapter.addTestStepLog("Sending GET request to: " + fullUrl + "?type=" + type);

    Response objResponse = sendGetRequest(fullUrl, strBearerToken, strJWTToken, null, queryParams);

    String strResponseBody = devHelperLibrary.getResponseBody(objResponse);
    objCucumberLogger.PrintStatus("Response is: " + strResponseBody);

    return objResponse;
}
