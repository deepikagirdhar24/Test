package ICOS.pojo;

import com.fasterxml.jackson.annotation.JsonProperty;
import java.util.List;

public class POJONewDocumentRequest {

    @JsonProperty("personId")
    private String strPersonId;

    @JsonProperty("challengeWord")
    private String strChallengeWord;

    @JsonProperty("questions")
    private List<QuestionAnswer> lstQuestions;

    // Inner class for question-answer
    public static class QuestionAnswer {
        @JsonProperty("question")
        private String strQuestion;

        @JsonProperty("answer")
        private String strAnswer;

        // Getters and Setters
        public String getStrQuestion() {
            return strQuestion;
        }

        public void setStrQuestion(String strQuestion) {
            this.strQuestion = strQuestion;
        }

        public String getStrAnswer() {
            return strAnswer;
        }

        public void setStrAnswer(String strAnswer) {
            this.strAnswer = strAnswer;
        }
    }

    // Getters and Setters
    public String getStrPersonId() {
        return strPersonId;
    }

    public void setStrPersonId(String strPersonId) {
        this.strPersonId = strPersonId;
    }

    public String getStrChallengeWord() {
        return strChallengeWord;
    }

    public void setStrChallengeWord(String strChallengeWord) {
        this.strChallengeWord = strChallengeWord;
    }

    public List<QuestionAnswer> getLstQuestions() {
        return lstQuestions;
    }

    public void setLstQuestions(List<QuestionAnswer> lstQuestions) {
        this.lstQuestions = lstQuestions;
    }
}
