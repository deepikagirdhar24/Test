    public List<String> convertTokenizedStringToList(String tokenizedStringList) {
    return new ArrayList<String>(Arrays.asList(tokenizedStringList.split(",")));
}

public int getListSize(String tokenizedStringList) {
    List<String> accList = convertTokenizedStringToList(tokenizedStringList);
    return accList.size();
}

