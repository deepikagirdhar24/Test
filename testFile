public void applyBigDecimalField(String rawValue, String fieldName, Object targetObject) {
    String normalized = normalize(rawValue);
    if (normalized != null && !normalized.isEmpty()) {
        try {
            BigDecimal parsed = new BigDecimal(normalized);
            String setterName = "setBd" + Character.toUpperCase(fieldName.charAt(0)) + fieldName.substring(1);
            Method setter = targetObject.getClass().getMethod(setterName, BigDecimal.class);
            setter.invoke(targetObject, parsed);
        } catch (NumberFormatException e) {
            System.err.println("Invalid numeric value for " + fieldName + ": " + normalized);
        } catch (NoSuchMethodException | IllegalAccessException | InvocationTargetException e) {
            throw new RuntimeException("Unable to set BigDecimal field: " + fieldName + " on " + targetObject.getClass().getSimpleName(), e);
        }
    }
}
